{# Template final index.html.twig #}

{% extends "SdzBlogBundle::blog/layout.html.twig" %}

{% block sdzblog_body %}
    <h2>Liste des articles</h2>

    <ul>
        {% for article in articles %}
            {# <li>
                <a href="{{ path('sdz_blog_view', {'id':article.id}) }}">Par {{ article.author }} - {{ article.title }}, publié le {{ article.date|date('d/m/Y H:i:s') }}</a>
            </li> #}
            {% include "SdzBlogBundle:Blog:article.html.twig" with {'accueil': true} %}
        {% else %}
            <li>Pas d'articles</li>
        {% endfor %}
    </ul>

     <div class="pagination">    
        <ul>      
            {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}      
            {% for p in range(1, nbTotalPages) %}
                <li{% if p == page %} class="active"{% endif %}>          
                    <a href="{{ path('sdz_blog_home', {'page': p}) }}">{{ p }}</a>        
                </li>      
            {% endfor %}    
        </ul>  
     </div>

{% endblock %}

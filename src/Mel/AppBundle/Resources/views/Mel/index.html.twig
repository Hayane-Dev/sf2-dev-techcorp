{% block title %} {{ parent() }} - Home {% endblock %}

{% block mel_body %} 
  <h2>Liste des articles</h2>
  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('melblog_view', {'id': article.id}) }}">{{ article.title }}</a>
        par {{ article.author }},
        le {{ article.date|date('d/m/Y') }}
      </li>
    {% else %}
